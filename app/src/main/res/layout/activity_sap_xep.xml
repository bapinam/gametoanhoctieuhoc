<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SapXepActivity"
   >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerSapXep"
        android:layout_width="585dp"
        android:layout_height="320dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:contentDescription="@string/app_name"
        android:id="@+id/textDemThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        android:text="@string/_00_00"
        android:textColor="#dc143c"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/RecyclerSapXep"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDongY"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="108dp"
        android:background="#add8e6"
        android:contentDescription="@string/app_name"
        android:elevation="20dp"
        android:text="@string/submit"
        android:textColor="#4b0082"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/RecyclerSapXep"
        app:layout_constraintTop_toBottomOf="@+id/textDemThoiGian" />
</androidx.constraintlayout.widget.ConstraintLayout>