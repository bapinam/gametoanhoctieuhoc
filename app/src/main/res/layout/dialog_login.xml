<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43000000">

    <ImageView
        android:id="@+id/imageKhungLogin"
        android:layout_width="752dp"
        android:layout_height="432dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/textViewDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:text="Đăng Nhập"
        android:textColor="#8BC34A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:background="#87E91E"
        android:text="Tài Khoản: "
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDN" />

    <TextView
        android:id="@+id/textViewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="40dp"
        android:background="#4AD400"
        android:text="Mật Khẩu:"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTk" />

    <EditText
        android:id="@+id/editTextNhapDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:imeOptions="flagNoExtractUi"
        android:hint="Nhập tài khoản"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textViewTk"
        app:layout_constraintTop_toBottomOf="@+id/textViewDN" />

    <Button
        android:id="@+id/buttonDANGnhap"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="420dp"
        android:layout_marginTop="68dp"
        android:text="Đăng Nhập"
        android:textColor="#9C27B0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassDN" />

    <Button
        android:id="@+id/buttonDangKy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:text="Đăng Ký"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/buttonDANGnhap"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassDN" />

    <EditText
        android:id="@+id/editTextPassDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/textViewPass"
        app:layout_constraintTop_toBottomOf="@+id/editTextNhapDN" />


</androidx.constraintlayout.widget.ConstraintLayout>